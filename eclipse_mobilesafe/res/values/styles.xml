<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->


        <!-- 再额外添加一个样式 去掉标题 -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--
    	android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="#D5185A"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
    -->
    <style name="my_title_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">#D5185A</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="widget_text">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">#ff000000</item>
    </style>
    
    <style name="My_Progress_H" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/my_progress_h</item>
        
    </style>
    

</resources>